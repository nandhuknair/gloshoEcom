<%- include('adminHeader') %>
<div class="container">
<div class="bg-dash-dark-2 py-4">
    

    <% if (userData.length === 0) { %>
        <div class="alert alert-danger" role="alert">
            No user Found Yet ðŸ˜’ !
          </div>
    <% } else { %>
   
      <h3 class="mt-5" style="letter-spacing: 1.5px;">USERS</h3>
    <div class="col-lg-12 ">
    <div class="card mb-0">
      <div class="card-header">
      </div>
      <div class="card-body pt-0">
        <div class="table-responsive">
          <table class="table mb-0 table-striped table-hover">
            <thead>
              <tr>
                <th>No.</th>
                <th>Username</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Status</th>
                <th>Action</th>
              </tr>
            </thead>
            <% userData.forEach((user,index) => { %>
            <tbody>
              <tr> 
                <th scope="row"><%= index+1 %></th>
                <td><%= user.userName %></td>
                <% if (user.active) { %>
                  <td><%= user.email %></td>
              <% } else { %>
                 <td class="text-decoration-line-through"><%= user.email %></td>
              <% } %>
                
                <td><%= user.number %></td>
                <% if (user.active) { %>
                    <td>Active</td>
                <% } else { %>
                    <td>Blocked</td>
                <% } %>
                <td >
                  <% if (user.active) { %>
                    <a href="/admin/block_user?id=<%= user._id %>"><i class="fa-solid fa-ban ms-3"></i></i></a>
                <% } else { %>
                  <a href="/admin/unblock_user?id=<%= user._id %>"><i class="fa-solid fa-lock-open ms-3"></i></i></a>
                <% } %>
                    
                </td>
              </tr>
              
         
              
            </tbody>
            <% }); %>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
    
 


<% } %>

<%- include('adminFooter') %>