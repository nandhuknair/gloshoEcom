



<%- include('adminHeader') %>

<div class="container">
  <h3 class="mt-5" style="letter-spacing: 1.5px;">CATEGORIES</h3>

  <div class="col-lg-7">
    <div class="card mb-0">
      <div class="card-header"></div>
      <div class="card-body pt-0">
        <div class="table-responsive">
          <table class="table mb-0 table-striped table-hover">
            <thead>
              <tr>
                <th>No.</th>
                <th>Category</th>
                <th>Status</th>
                <th>Updation</th>
              </tr>
            </thead>
            <tbody>
              <% data.forEach((data, index) => { %>
                <tr>
                  <th scope="row"><%= index + 1 %></th>
                  <% if (data.active) { %>
                    <td><%= data.category %></td>
                  <% } else { %>
                    <td class="text-decoration-line-through"><%= data.category %></td>
                  <% } %>

                  <% if (data.active) { %>
                    <td>Listed</td>
                  <% } else { %>
                    <td>Unlisted</td>
                  <% } %>

                  <td class="d-flex">
                    <a href="" data-bs-toggle="modal" data-bs-target="#myModalEdit">
                      <i class="fa-solid fa-pen-to-square me-4 ms-2"></i>
                    </a>
                    <% if (data.active) { %>
                      <a href="/admin_unlist_category?id=<%= data._id %>"><i class="fa-regular fa-circle-xmark"></i></a>
                    <% } else { %>
                      <a href="/admin_list_category?id=<%= data._id %>"><i class="fa-solid fa-check"></i></a>
                    <% } %>
                  </td>
                </tr>
                <!-- Modal for Editing Category -->

                   <!-- Modal -->
                <div class="modal fade text-start" id="myModalEdit" tabindex="-1" aria-labelledby="myModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                      <div class="modal-content">
                        <div class="modal-header">
                          <h5 class="modal-title" id="myModalLabel">Edit Categories</h5>
                          <button class="btn-close btn-close-white" type="button" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                          <p></p>
                          <form action="/admin_edit_category?oldCategory=<%= data.category %>" method="post">
                            <div class="mb-3">
                              <label class="form-label" for="modalInputEmail1">Category</label>
                              <input class="form-control" id="modalInputEmail1" type="text" name="category" aria-describedby="emailHelp" value="<%= data.category %>">
                            </div>
                            <div class="modal-footer">
                              <button class="btn btn-secondary" type="button" data-bs-dismiss="modal">Close</button>
                              <button class="btn btn-primary" type="submit">Save</button>
                            </div>
                          </form>
                        </div>
                      </div>
                    </div>
                  </div>
                  <!-- End Modal -->
  
                </div>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Add Button for Adding Category -->
<div class="card me-5 mt-3">
  <div class="card-body pt-0 text-center">
    <button class="btn btn-primary" type="button" data-bs-toggle="modal" data-bs-target="#myModalAdd">ADD</button>
  </div>
</div>

<!-- Modal for Adding Category -->
<div class="modal fade text-start" id="myModalAdd" tabindex="-1" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="myModalLabel">Add Categories</h5>
            <button class="btn-close btn-close-white" type="button" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <form action="/admin_add_category" method="post">
              <div class="mb-3">
                <label class="form-label" for="modalInputEmail1">Category</label>
                <input class="form-control" id="modalInputEmail1" type="text" name="category" aria-describedby="emailHelp">
              </div>
              <div class="modal-footer">
                <button class="btn btn-secondary" type="button" data-bs-dismiss="modal">Close</button>
                <button class="btn btn-primary" type="submit">Add</button>
              </div>
            </form>
          </div>
        </div>
      </div>
</div>
<!-- End Modal for Adding Category -->

<%- include('adminFooter') %>





